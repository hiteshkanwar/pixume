= form_for @achievement_category do |f|
  - if @achievement_category.errors.any?
    #error_explanation
      %h2= "#{pluralize(@achievement_category.errors.count, "error")} prohibited this achievement_category from being saved:"
      %ul
        - @achievement_category.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :is_public
    = f.check_box :is_public
  .actions
    = f.submit 'Save'
