- model_class = Company
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:company_name)
      %th= model_class.human_attribute_name(:company_industry)
      %th= model_class.human_attribute_name(:company_desc)
      %th= model_class.human_attribute_name(:company_location)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @companies.each do |company|
      %tr
        %td= link_to company.id, company_path(company)
        %td= company.company_name
        %td= company.company_industry
        %td= company.company_desc
        %td= company.company_location
        %td=l company.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_company_path(company), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), company_path(company), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_company_path, :class => 'btn btn-primary'
