= form_for @rating do |f|
  - if @rating.errors.any?
    #error_explanation
      %h2= "#{pluralize(@rating.errors.count, "error")} prohibited this rating from being saved:"
      %ul
        - @rating.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :num_connections
    = f.number_field :num_connections
  .field
    = f.label :num_recommendations
    = f.number_field :num_recommendations
  .field
    = f.label :num_groups
    = f.number_field :num_groups
  .field
    = f.label :num_posts_per_month
    = f.number_field :num_posts_per_month
  .actions
    = f.submit 'Save'
