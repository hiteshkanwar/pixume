#myModal.modal.fade
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} &times;
        %h4#myModalLabel.modal-title Sign In
      .modal-body
        .msg
          .alert.alert-success
            / <button aria-hidden="true" data-dismiss="alert" class="close" type="button">Ã—</button>
            %strong Well done!
            You successfully read this important alert message.
        = form_for(resource, :as => resource_name, :url => session_path(resource_name), :remote => true, :class => "loginform form-horizontal") do |f|
          .input-group
            %span.input-group-addon
              %i.glyphicon.glyphicon-user
            = f.email_field :email, :placeholder => 'Email', :required => true, :class => "login-username form-control", :style=>"height: 28px;"
          .input-group
            %span.input-group-addon
              %i.glyphicon.glyphicon-lock
            = f.password_field :password, :placeholder => 'Password', :required => true, :class => "login-password form-control", :style=>"height: 29px;"
          .input-group
            .checkbox
              %label
              = f.check_box :remember_me, :class => "login-remember"
              Remember me
          .input-group
            .col-sm-12.controls
              = f.submit "Log In", :class => "btn-login btn btn-success"
              or
              %a#btn-fblogin.btn.btn-primary{:href => "/auth/linkedin"} Login with Linkedin
          .input-group
            .col-md-12.control
              %div{:style => "border-top: 1px solid#888; padding-top:15px; font-size:85%"}
                Don't have an account!
                %a{"data-dismiss" => "modal", "data-target" => "#myModal2", "data-toggle" => "modal", :href => "#"} Sign Up Here
/ Sign Up
#myModal2.modal.fade
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} &times;
        %h4#myModalLabel.modal-title Sign Up
      .modal-body
        %form#loginform.form-horizontal
        = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :remote => true) do |f|
          .input-group
            %span.input-group-addon
              %i.glyphicon.glyphicon-user
            = f.text_field :name, :placeholder => "Name", :required => 'true', :class => "login-username form-control", :style=>"height: 28px;"
          .input-group
            %span.input-group-addon
              %i.glyphicon.glyphicon-envelope
            = f.email_field :email, :placeholder => "Email", :required => 'true', :email => 'true', :class => "login-username form-control", :style=>"height: 29px;"
          .input-group
            %span.input-group-addon
              %i.glyphicon.glyphicon-lock
            = f.password_field :password, :placeholder => "Password", :required => 'true', :class => "login-password form-control", :style=>"height: 28px;"
          .input-group
            %span.input-group-addon
              %i.glyphicon.glyphicon-lock
            = f.password_field :password_confirmation, :placeholder => "Password Confirmation", :required => 'true', :class => "login-password form-control", :style=>"height: 28px;"
          .form-group
            .col-sm-12.controls
              = f.submit "Create Account", :class => "btn-login btn btn-success"
              or
              %a#btn-fblogin.btn.btn-primary{:href => "#"} Login with Linkedin
          .form-group
            .col-md-12.control
              %div{:style => "border-top: 1px solid#888; padding-top:15px; font-size:85%"}
                Already have an account!
                %a{"data-dismiss" => "modal", "data-target" => "#myModal", "data-toggle" => "modal", :href => "#"} Sign in Here
