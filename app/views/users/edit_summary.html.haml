#popup.popupBox{:style => "z-index: 9999;"}
  %h2
    %span Edit About Me
  = form_for @user, :remote => true do |f|
    .hero-unit
      %table{:border => "0", :cellpadding => "0", :cellspacing => "0", :width => "100%"}
        %tr
          %td.labelCont Summary
          %td
            = f.text_area :summary, :class => 'span2', :required => true
            %br
            %br
        %tr
          %td
          %td
            = hidden_field_tag :update_div, 'summary'
            = f.submit "Done", :class => "btn btn-success dropdown-toggle"
           
