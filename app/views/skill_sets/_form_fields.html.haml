:css
  #cboxClose {
    font-size: 14px;
    bottom: 27px;
  }
%table{:border => "0", :cellpadding => "0", :cellspacing => "0", :width => "100%"}
  %tr
    %td.labelCont Skillset Name
    %td
      = f.text_field :name, :class => 'span2', :required => true, :maximum => 50 
      %p For example, Java Script
  %tr
    %td.labelCont Expertise
    %td
      = f.select :expertise_level, SkillSet.experties_levels, { :prompt => "Please Select" }, :class => 'span2', :required => true
  %tr
    %td.labelCont Category
    %td
      = f.text_field :category, :required => true, :maximum => 50, "data-provide" => "typeahead", "data-items" => "4", "data-source" => SkillCategory.get_public_categories
      %p For example, Software Development
  %tr
    %td &nbsp;
    %td
      = f.submit 'Done', :class => "btn btn-success dropdown-toggle"


